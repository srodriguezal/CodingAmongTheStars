<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/character_selection_background">

    <Button
        android:id="@+id/kotlin_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="200dp"
        android:background="@drawable/kotlin_400x400"
        android:contentDescription="@string/kotlin_alien_image_button"
        android:foreground="@drawable/kotlin_400x400"
        app:layout_constraintBottom_toBottomOf="@+id/ruby_button"
        app:layout_constraintRight_toLeftOf="@+id/ruby_button"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/ruby_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="200dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/ruby_400x400"
        android:contentDescription="@string/ruby_alien_image_button"
        android:foreground="@drawable/ruby_400x400"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/back_characters_button"
        android:contentDescription="@string/back_characters_button_description"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="28dp"
        android:layout_marginTop="32dp"
        android:background="@drawable/back_arrow"
        android:foreground="@drawable/front_back_arrow"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>