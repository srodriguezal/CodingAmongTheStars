<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/text_background">

    <TextView
        android:id="@+id/levelSelectionTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="60dp"
        android:layout_marginTop="60dp"
        android:layout_marginEnd="60dp"
        android:fontFamily="@font/zcool_qingke_huangyou"
        android:text="@string/level_selection_text_spanish"
        android:textColor="#FFFFFF"
        android:textSize="60sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/easyLevelButton"
        android:layout_width="550dp"
        android:layout_height="100dp"
        android:layout_marginTop="50dp"
        android:background="@drawable/button"
        android:fontFamily="@font/zcool_qingke_huangyou"
        android:text="@string/easy_level_spanish"
        android:textSize="60sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/levelSelectionTextView" />

    <Button
        android:id="@+id/mediumLevelButton"
        android:layout_width="550dp"
        android:layout_height="100dp"
        android:layout_marginTop="50dp"
        android:background="@drawable/button"
        android:fontFamily="@font/zcool_qingke_huangyou"
        android:text="@string/medium_level_spanish"
        android:textSize="60sp"
        app:layout_constraintEnd_toEndOf="@+id/easyLevelButton"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/easyLevelButton"
        app:layout_constraintTop_toBottomOf="@+id/easyLevelButton" />

    <Button
        android:id="@+id/hardLevelButton"
        android:layout_width="550dp"
        android:layout_height="100dp"
        android:layout_marginTop="50dp"
        android:background="@drawable/button"
        android:fontFamily="@font/zcool_qingke_huangyou"
        android:text="@string/hard_level_spanish"
        android:textSize="60sp"
        app:layout_constraintEnd_toEndOf="@+id/mediumLevelButton"
        app:layout_constraintStart_toStartOf="@+id/mediumLevelButton"
        app:layout_constraintTop_toBottomOf="@+id/mediumLevelButton" />

    <ImageView
        android:id="@+id/backLevelsButton"
        android:contentDescription="@string/back_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="28dp"
        android:layout_marginTop="32dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/back_arrow" />

</androidx.constraintlayout.widget.ConstraintLayout>