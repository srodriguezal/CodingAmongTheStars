<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/level_selection_background">

    <Button
        android:id="@+id/easyLevelButton"
        android:layout_width="220dp"
        android:layout_height="50dp"
        android:layout_marginTop="128dp"
        android:layout_marginBottom="27dp"
        android:fontFamily="@font/zcool_qingke_huangyou"
        android:text="@string/easy_level"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/mediumLevelButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />

    <Button
        android:id="@+id/mediumLevelButton"
        android:layout_width="220dp"
        android:layout_height="50dp"
        android:layout_marginBottom="28dp"
        android:fontFamily="@font/zcool_qingke_huangyou"
        android:text="@string/medium_level"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/hardLevelButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/hardLevelButton"
        android:layout_width="220dp"
        android:layout_height="50dp"
        android:layout_marginBottom="56dp"
        android:fontFamily="@font/zcool_qingke_huangyou"
        android:text="@string/hard_level"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>